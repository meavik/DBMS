DECLARE
NUM INTEGER := 2;
FACT NUMBER := 1;
TEMP INTEGER;
BEGIN
TEMP := NUM;
IF (TEMP=0 OR TEMP = 1) THEN
DBMS_OUTPUT.PUT_LINE('FACTORIAL OF '||NUM|| ' IS '||1);
ELSE
WHILE (TEMP>1) LOOP
FACT := FACT*TEMP;
TEMP := TEMP-1;
END LOOP;
DBMS_OUTPUT.PUT_LINE('FACTORIAL OF '||NUM|| ' IS '||FACT);
END IF;
END;
